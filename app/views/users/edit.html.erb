<%= render "nav" %>

<% if flash.now[:errors] %>
  <div>
    <p class = "alert alert-danger">
    <%= flash.now[:errors] %> </p>
  </div>
<% end %>

<%= form_for(:user, url: user_path(@user.id), method: :patch) do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>

  <%= f.label :email%>
  <%= f.text_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confriamtion %>

  <%= f.submit "Update" %>

<% end %>
