<h1>Sign Up for Bitsy!</h1>
<%= form_for @user do |f| %>
  <%= f.label :name  %>
  <%= f.text_field :name %>

  <%= f.label :email  %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.pasword_field :password  %>

    <%= f.label :password_confirmation, "Confirm Password" %>
    <%= f.password_field :password_confirmation %>

    <%= f.submit "Create account" %>
<% end %>
