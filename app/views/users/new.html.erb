<%= form_for(:user, url: users_path) do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>

  <%= f.label :email%>
  <%= f.text_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confriamtion %>

  <%= f.submit "register" %>

<% end %>
