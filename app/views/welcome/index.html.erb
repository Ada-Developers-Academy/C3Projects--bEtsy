<div class="row">
  <% @products.each do |product| %>
    <div class="col-md-3">
     <div class="thumbnail">
       <%= image_tag(product.photo_url, class: "img-rounded") %>
       <div class="caption">
         <%= link_to product.name, product_path(product) %>
         <p><%= link_to "View Product", product_path(product), class: "btn btn-primary" %></p>
      </div>
     </div>
   </div>
  <% end %>
</div>
