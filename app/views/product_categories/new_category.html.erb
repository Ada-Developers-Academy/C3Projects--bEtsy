<% unless flash[:errors].nil? %>
  <%= render partial: "shared/errors", locals: {instance: @category} %>
<% end %>

<h1>Add a New Category</h1>

<%= form_for @category, url: category_path, method: :post, html: {class: "form"} do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <%= f.submit "Create a Category", class: "btn btn-default" %>

<% end %>