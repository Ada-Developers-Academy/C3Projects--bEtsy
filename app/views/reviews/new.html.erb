<h1>Review</h1>
<%= form_for [@product, @review], url: product_reviews_path, html: { class: "form" } do |f| %>
  <div class="form-group">
    <%= f.label :rating %>
    <%= f.select :rating, options_for_select([ "★☆☆☆☆", "★★☆☆☆", "★★★☆☆", "★★★★☆", "★★★★★"]), include_blank: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :review_text %>
    <%= f.text_area :review_text, class: "form-control" %>
  </div>

  <%= f.hidden_field :product_id, value: @product.id %>

  <%= f.submit class: "btn btn-default" %>

<% end %>
