<h3>Log In Here!</h3>

<% if flash.now[:error] %>
  <div>
    <%= flash.now[:error] %>
  </div>
<% end %>

<%= form_for(:session, url: login_path) do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  <%= f.submit "Sign In" %>
<% end %>
