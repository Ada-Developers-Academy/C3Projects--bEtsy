<h1>Add Payment Details</h1>
<%= form_for @order, url: order_path(params[:id]), :html => {:class => 'form-horizontal center'} do |f| %>
  <fieldset>
    <legend>Payment Details</legend>
      <div class="form-group">
        <%= f.label :name %>
        <div class="col-md-8">
          <%= f.text_field :name %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :email %>
        <div class="col-md-8">
          <%= f.text_field :email %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :street %>
          <div class="col-md-8">
            <%= f.text_field :street %>
          </div>
      </div>
      <div class="form-group">
        <%= f.label :city %>
        <div class="col-md-8">
          <%= f.text_field :city %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :state %>
        <div class="col-md-8">
          <%= f.text_field :state %>
          </div>
      </div>
      <div class="form-group">
        <%= f.label :zip %>
        <div class="col-md-8">
          <%= f.text_field :zip %>
          </div>
      </div>
      <div class="form-group">
        <div class="row">
          <div class="col-md-8">
            <%= f.label :credit_card %>
            <%= f.text_field :credit_card %>
          </div>
          <div class="col-md-2">
            <%= f.label :exp_date %>
            <%= f.text_field :exp_date %>
          </div>
          <div class="col-md-2">
            <%= f.label :cvv %>
            <%= f.text_field :cvv %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :billing_zip %>
        <div class="col-md-8">
          <%= f.text_field :billing_zip %>
        </div>
      </div>
     </fieldset>

  <%= f.submit 'Place Order', :data => {:confirm => 'Place Order Now?'}, class: 'btn btn-primary' %>
<% end %>
