<div class="row form-header">
  <div class="col-md-8 col-md-offset-2">
    <h1> Order Fulfillment </h1>
    </div>
  </div>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
  <table class="table table-hover table-bordered">
    <tr class="active">
      <th>Purchased By</th>
      <th>Product</th>
      <th>Quantity</th>
      <th>Subtotal</th>
      <th>Purchase Date</th>
      <th>Shipped?</th>
      <th>Order Status</th>
    </tr>

    <% @all_items.each do |item| %>
      <tr>
        <td>
          <% if item.order.buyer %>
            <%= item.order.buyer.name %>
          <% else %>
            In cart
          <% end %>
        </td>
        <td><%= link_to item.product.name, product_path(item.product.id) %></td>
        <td><%= item.quantity %></td>
        <td><%= item.total_price %></td>
        <td><%= item.updated_at.strftime("%m/%d/%Y") %></td>
        <% if item.order.status == 'paid' %>
          <td><TBD</td>
        <% end %>
        <td><%= item.order.status %></td>
      </tr>
    <% end %>
  </table>
  </div>
</div>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
  <table class="table table-hover table-bordered">
    <tr class="active">
      <th>Product</th>
      <th>Order Status</th>
      <th>Total Revenue</th>
      <th>Number of Orders</th>
    </tr>

    <% @all_items.each do |item| %>
      <tr>
        <td><%= link_to item.product.name, product_path(item.product.id) %></td>
        <% if item.order.status == 'paid' %>
          <td class="paid"><%= item.order.status %></td>
        <% elsif item.order.status == 'pending' %>
          <td class="pending"><%= item.order.status %></td>
        <% elsif item.order.status == 'cancelled' %>
          <td class="cancelled"><%= item.order.status %></td>
        <% else %>
          <%= item.order.status %>
        <% end %>
        <td><% item.total_price %></td>
        <td><%  %></td>
      </tr>
    <% end %>
  </table>
  </div>
</div>
