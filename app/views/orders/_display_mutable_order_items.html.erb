<table class="table table-striped table-condensed">
  <tr>
    <th>Quantity</th>
    <th>Item Name</th>
    <th>Seller</th>
    <th>Cost</th>
    <th>Remove</th>
  </tr>
  <% @order.order_items.each do |item| %>
    <tr>
      <!-- !L this should use Lindsey's display_dollars helper once it exists! -->
      <td><!--˅˄-->
        <%= link_to "-", less_item_path(item), method: :patch %>
        <%= item.quantity_ordered %>
        <%= link_to "+", more_item_path(item), method: :patch %>
      </td>
      <td><%= link_to item.product.name, product_path(item.product) %></td>
      <td><%= link_to item.product.seller.username, seller_path(item.product.seller) %></td>
      <td><%= display_dollars(item.item_price) %></td>
      <td>
        <div class="garbage-icon">
          <%= link_to kill_item_path(item), method: :delete, data: { confirm: item.remove_prompt_text } do %>
            <span class="glyphicon glyphicon-trash"></span>
          <% end %>
        </div>
      </td>
    </tr>
  <% end %>
  <tr>
    <!-- !L this should use Lindsey's display_dollars helper once it exists! -->
    <th colspan="3">Total:</th>
    <th colspan="2"><%= display_dollars(@order.order_price) %></th>
  </tr>
</table>
