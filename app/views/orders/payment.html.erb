<!-- this information is updating an existing Order -->
<!-- so the method should be put, right? Not the default 'post'â€¦ -->
<%= form_for(@order, method: :put) do |f| %>
  <div class="form-group">
  <%= f.label :email %>
  <%= f.text_field :email %>
  </div>

  <div class="form-group">
  <%= f.label :address1 %>
  <%= f.text_field :address1 %>
  </div>

  <div class="form-group">
  <%= f.label :address2 %>
  <%= f.text_field :address2 %>
  </div>

  <div class="form-group">
  <%= f.label :city %>
  <%= f.text_field :city %>
  </div>

  <div class="form-group">
  <%= f.label :state %>
  <%= f.text_field :state %>
  </div>

  <div class="form-group">
  <%= f.label :zipcode %>
  <%= f.text_field :zipcode %>
  </div>

  <!-- WIP -->
  <!-- :name_on_card -->

  <div class="form-group">
  <%= f.label :card_number %>
  <%= f.text_field :card_number %>
  </div>

  <div class="form-group">
    <%= f.label :ccv, class: 'text-uppercase' %>
    <%= f.text_field :ccv %>
  </div>

  <div class="form-group">
  <%= f.label :card_exp %>
  <%= f.text_field :card_exp %>
  </div>

  <%= f.submit "Submit Order", class: 'btn btn-primary' %>

  <% end %>
