<%= button_to "Ship this order", root_path, method: :get, class: "btn btn-info" %>
<%= button_to "Cancel this order", root_path, method: :get, class: "btn btn-warning" %>

<table class="table table-striped table-condensed">
  <tr>
    <th>Quantity</th>
    <th>Product</th>
    <th>Price</th>
  </tr>
  <% @items.each do |item| %>
    <tr>
      <td><%= item.quantity_ordered %></td>
      <td><%= item.product.name %></td>
      <td><%= display_dollars(item.item_price) %></td>
    </tr>
  <% end %>
  <tr>
    <th colspan="2">Order Total</th>
    <th><%= display_dollars(@order.order_price(@seller.id)) %></th>
  </tr>
</table>
