<div class="jumbotron">
  <div class="container">
    <h1>Welcome to Bitsy</h1>
    <p>Your home for the itsy bitsy, teeny weeny, itty bitty, small, minuscule, tiny things in life. </p>
  </div>
</div>
<div class="container">
  <% @products.each do |product| %>
    <div class="col-xs-4">
      <div class="thumbnail">
        <%= image_tag(product.photo_url, class: "img-responsive product-thumb") %>
        <div class="caption">
          <h5 class="pull-right"> <%= number_to_currency(product.price) %></h5>
          <h4><a href="#"><%= product.name %></a></h4>
          <p><%= link_to("See more about the product", product_path(product.id)) %></p>
        </div>
        <div class="ratings">
          <p class="pull-right"><%= product.reviews.count %> Reviews</p>
          <p><%= render_stars(avg_rating(product.id)) %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
