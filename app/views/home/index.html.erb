<div class="jumbotron">
  <div class="container">
    <h1>Welcome to Bitsy</h1>
    <p>Your home for the itsy bitsy, teeny weeny, itty bitty, small, minuscule, tiny things in life. </p>
  </div>
</div>
<div class="container">
  <div class="row">
  <% @products.each do |product| %>
    <div class="col-xs-4">
      <div class="thumbnail">
        <%= image_tag(product.photo_url, class: "img-responsive") %>
          <div class="caption">
            <h5 class="pull-right"> <%= number_to_currency(product.price) %></h5>
            <h4><a href="#"><%= product.name %></a>
            </h4>
            <p><%= product.desc %></p>
          </div>
          <div class="ratings">
            <p class="pull-right"><%= product.reviews.count %> Reviews</p>
            <p>
              <span class="glyphicon glyphicon-star"></span>
              <span class="glyphicon glyphicon-star"></span>
              <span class="glyphicon glyphicon-star"></span>
              <span class="glyphicon glyphicon-star"></span>
              <span class="glyphicon glyphicon-star"></span>
            </p>
          </div>
      </div>
    </div>
  <% end %>
  </div>
</div>
