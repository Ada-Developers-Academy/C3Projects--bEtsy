<h1><%= @product.name %></h1>
<h4>Average Rating: <%= @average_rating %></h4>
<h4><%= display_dollars(@product.price) %></h4>

<%= image_tag "#{@product.photo_url}" %>

<p><%= @product.description %></p>

<%= link_to "Add to Cart", add_item_path(@product), method: :post, class: "btn btn-default" %>
<%= link_to "Add Review", new_review_path, class: "btn btn-default" %>

<% if @product.reviews.count >= 1 %>
  <h3>Reviews:</h3>

  <% @reviews.each do |review| %>
    <%= render "reviews", review: review %>
  <% end %>
<% end %>


