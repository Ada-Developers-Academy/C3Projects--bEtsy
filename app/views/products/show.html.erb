<h1><%= @product.name %></h1>

<%= image_tag @product.photo_url %>

<p><%= @product.description %></p>

<p><%= @product.stock %> available</p>

<%= form_for [ @product, @order_item ] do |f| %>
    <%= f.label :quantity %>
    <%= f.number_field :quantity, in: 1..@product.stock, step: 1, value: 1 %>

    <%= f.submit 'Add to cart' %>
<% end %>

<h3>Reviews</h3>

<%= render partial: 'review', collection: @reviews %>

<%= link_to 'Leave a review', new_product_review_path(@product) %>


<%= link_to 'See all products', products_path %>