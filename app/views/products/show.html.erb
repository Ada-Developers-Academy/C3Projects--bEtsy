<div class="page-header">
  <h1><%= @product.name %>
    <small>Average Rating:
      <% if @average_rating == 0 %>
        <%= "No Reviews" %>
      <% else %>
        <%= @average_rating %>
      <% end %>
    </small>
  </h1>
</div>
<h4>Sold by: <%= @product.seller.username %> </h4>
<h4><%= display_dollars(@product.price) %></h4>

<%= image_tag "#{@product.photo_url}", size: "200" %>

<p><%= @product.description %></p>

<%= link_to "Add to Cart", add_item_path(@product), method: :post, class: "btn btn-default" %>
<%= link_to "Add Review", new_review_path, class: "btn btn-default" %>

<% if @product.reviews.count >= 1 %>
  <h3>Reviews:</h3>

  <% @reviews.each do |review| %>
    <%= render "reviews", review: review %>
  <% end %>
<% end %>


