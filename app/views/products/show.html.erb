<%= link_to "All products", products_path %>
<table>
  <tr>
    <th>Product name</th>
    <th>Description</th>
    <th>Price</th>
    <th>Stock</th>
    <th>Photo_url</th>
    <th colspan="3"></th>
  </tr>

  <tr>
    <td><%= @product.name %></td>
    <td><%= @product.desc %></td>
    <td><%= @product.price %></td>
    <td><%= @product.stock %></td>
    <td><%= image_tag("#{@product.photo_url}") %></td>
    <th><%= link_to "Show", product_path(@product.id), method: "get" %></th>
    <th><%= link_to "Edit", edit_product_path(@product.id) %></th>
    <th><%= link_to "Delete", product_path(@product.id), method: "delete" %></th>
</table>

<%= link_to "Add New Product", new_product_path %>
