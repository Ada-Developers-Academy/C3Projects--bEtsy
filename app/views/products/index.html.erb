<table>
  <% @products.each do |product| %>
  <tr>
    <th>Product name</th>
    <th>Description</th>
    <th>Price</th>
    <th>Stock</th>
    <th>Photo_url</th>
    <th colspan="3"></th>
  </tr>

  <tr>
    <td><%= product.name %></td>
    <td><%= product.desc %></td>
    <td><%= product.price %></td>
    <td><%= product.stock %></td>
    <td><%= image_tag("#{product.photo_url}") %></td>
    <td><%= link_to "Show", product_path(product.id), method: "get" %></td>
    <td><%= link_to "Edit", edit_product_path(product.id) %></td>
    <td><%= link_to "Delete", product_path(product.id), method: "delete",  data: { confirm: "Are you sure?" } %></td>
  </tr>
  <% end %>
</table>
