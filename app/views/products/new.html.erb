
<%= form_for @product do |f| %>
  <%= f.label :name %>
  <%= f.text_area :name %>

  <%= f.label :price %>
  <%= f.text_area :price %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :photo_url %>
  <%= f.text_area :photo_url %>

  <%= f.label :stock %>
  <%= f.text_area :stock %>

  <%= f.hidden_field :active, value: true %>
  <%= f.hidden_field :user_id, value: params[:user_id] %>

  <%= f.submit %>

<% end %>



