<h1> Add a New Product to Sell </h1>

<%= form_for @product do |f| %>

  <%= f.label :name, "Name" %>
  <%= f.text_field :name %>

  <%= f.label :description, "Description" %>
  <%= f.text_area :description %>

  <%= f.label :price, "Price" %>
  <%= f.text_field :price %>

  <%= f.label :stock, "Stock" %>
  <%= f.text_field :stock %>

  <%= f.label :photo_url, "Add Photo" %>
  <%= f.file_field :photo_url %>



  <%= f.submit "Submit" %>
<% end %>
