<div class="row">
  <div class="col-md-12">
    <h2>New Product</h2>
      <%= form_for @product, url: "/sellers/#{@seller.id}/products/new", html: { class: "form" } do |f| %>

        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control", required: "required" %>
        </div>
        <div class="form-group">
          <%= f.label :price %>
          <%= f.text_field :price, class: "form-control", required: "required" %>
        </div>
        <div class="form-group">
          <%= f.label :stock %>
          <%= f.text_field :stock, class: "form-control", required: "required" %>
        </div>
        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :description, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :photo_url %>
          <%= f.text_field :photo_url, class: "form-control" %>
        </div>

        <%= f.hidden_field :seller_id, :value => @seller.id %>

        <%= f.submit "Save", class: "btn btn-default"%>
      <% end %>
  </div>
</div>
