<div class="container">
  <div class="col-lg-12">
  <h1>All Sellers</h1>
    <table class="table table-hover">
    <tr>
      <th>
        Seller
      </th>
      <th>
        Total number of products in stock
      </th>
    </tr>
    <% @sellers.each do |seller| %>
      <tr>
        <td>
          <%= link_to "#{seller.username}", seller_path(id: seller.id) %>
        </td>
        <td>
          <% num_products = 0 %>
          <% seller.products.each do |product| %>
            <% num_products += product.stock %>
          <% end %>
          <%= num_products %>
        </td>
      </tr>
    <% end %>
    </table>
  </div>
</div>
