
<div class="col-sm-8 col-sm-offset-2">
  <table class="table table-hover">
  <tr>
    <% headers.each do |header| %>
    <th>
      <%= header %>
    </th>
    <% end %>
  </tr>

  <% items.each do |item| %>
    <tr>
      <td>
        <%= item.name %>
      </td>
      <td>
        <%= item.description %>
      </td>
      <td>
        <%= number_to_currency(item.price) %>
      </td>
      <td>
        <%= image_tag(item.photo_url, alt: "Image of #{item.name}", height: 200 ) %>
      </td>
    </tr>
  <% end %>
</table>
</div>
