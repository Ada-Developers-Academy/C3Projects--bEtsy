<!DOCTYPE html>
<html>
<head>
  <title>Primo!</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
</head>
<div class="container-fluid">
  <body>
    <div class="row">
      <header>
        <div class="col-md-9">
          <h1>Primo!</h1>
        </div>
        <div class="account-and-cart-buttons col-md-3">
          <% if session[:merchant_id] %>
            <%= link_to "Logout", logout_path , method: :delete, class: "btn btn-default" %>
          <% else %> 
            <%= link_to "Login", login_path, class: "btn btn-default" %>
            <%= link_to "Sign Up!", new_merchant_path, class: "btn btn-default" %>
          <% end %>
          <a href="cart_path" class="btn btn-default"><i class="fa fa-shopping-cart"></i></a>
        </div>
      </header>
    </div>

    <%= yield %>
  </body>
</div>
</html>
