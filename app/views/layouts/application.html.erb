<!DOCTYPE html>
<html>
<head>
  <title>Tux</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <header class="jumbotron" id="top">
    <div class="container-fluid">
      <div class="page-header">
        <h1>Tux</h1>
      </div>
        <nav class="navbar navbar-default">
          <div class="container-fluid">
            <div class="navbar-header">
              <%= link_to root_path, class: "navbar-brand" do %>
                <%= image_tag("penguin.png", size: "20x20", alt: "Home") %> <div class="tux">Tux</div>
              <% end %>
            </div>

              <ul class="nav navbar-nav">
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button">Search by <span class="caret"></span></a>
                  <ul class="dropdown-menu">
                    <li><%= link_to "All Products", products_path %></li>
                    <li><%= link_to "All Categories", categories_path %></li>
                    <li><%= link_to "All Sellers", sellers_path %></li>
                  </ul>
                </li>
                <% cart_display_text = "Cart" %>
                <% if @order.order_items && @order.order_items.count > 0 %>
                  <% cart_display_text += " (#{ @order.order_items.count })" %>
                <% end %>
                <li><%= link_to cart_display_text, cart_path %></li>
              </ul>
          </div>
        </nav>
    </div>
  </header>

  <main class="container-fluid">
    <% if flash[:error] %>
      <h4 class="alert alert-warning"><%= flash[:error] %></h4>
    <% end %>

    <%= yield %>
  </main>

  <footer>
    <nav class="navbar"> -
      <%= link_to "Top", "#top" %> -
      <%= link_to "Home", root_path %> -
      <%= link_to "All Products", products_path %> -
      <%= link_to "All Categories", categories_path %> -
      <%= link_to "All Sellers", sellers_path %> -
      <%= link_to cart_display_text, cart_path %> -
    </nav>
  </footer>
</body>
</html>
