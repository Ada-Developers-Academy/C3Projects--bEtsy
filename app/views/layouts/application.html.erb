<!DOCTYPE html>
<html>
<head>
  <title>Primo!</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
</head>
<div class="container-fluid">
  <body>
    <div class="row">
      <header>
        <div class="col-md-2">
          <h1>Primo!</h1>
        </div>
          <% if session[:merchant_id] %>
            <div class="account-and-cart-buttons col-md-2 col-md-offset-8">
              <%= link_to "Logout", logout_path , method: :delete, class: "btn btn-default" %>
              <a href="cart_path" class="btn btn-default"><i class="fa fa-shopping-cart"></i></a>
            </div>
          <% else %>
            <div class="account-and-cart-buttons col-md-3 col-md-offset-7">
              <%= link_to "Login", login_path, class: "btn btn-default" %>
              <%= link_to "Sign Up!", new_merchant_path, class: "btn btn-default" %>
              <a href="/cart" class="btn btn-default"><i class="fa fa-shopping-cart"></i> <%= "(#{current_order.order_items.size})" %></a>
            </div>
          <% end %>
      </header>
    </div>


    <nav class="navbar navbar-default">

        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <a class="navbar-brand" href="/">Primo</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Shop <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to "All Products", products_path %></li>
                <li role="separator" class="divider"></li>
                <li><%= link_to "By Category" %></li>
                <li role="separator" class="divider"></li>
                <% @categories.each do |category| %>
                  <li><%= link_to "#{category.name}", root_path %></li>
                <% end %>
              </ul>
            </li>
          </ul>

          <ul class="nav navbar-nav navbar-right">
            <% if session[:merchant_id] %>
              <li><%= link_to "Merchant Dashboard", merchant_dashboard_path(session[:merchant_id]) %></li>
            <% end %>
              <p class="navbar-text">Welcome, <%= @merchant_name %></p>
          </ul>
        </div><!-- /.navbar-collapse -->

    </nav>

    <div class="container">
      <%= yield %>
    </div>
  </body>
</div>
</html>
